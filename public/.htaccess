# Enable Gzip compression for all text-based assets
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json application/wasm application/xml+rss text/javascript application/x-javascript application/x-font-ttf application/x-font-otf font/ttf font/otf image/svg+xml
  
  # Add correct content-type for fonts
  AddType application/vnd.ms-fontobject .eot
  AddType application/x-font-ttf .ttf
  AddType application/x-font-opentype .otf
  AddType application/x-font-woff .woff
  AddType application/x-font-woff2 .woff2
  AddType image/svg+xml .svg
  AddType image/webp .webp
  
  # Compress compressible fonts
  AddOutputFilterByType DEFLATE font/ttf font/otf image/svg+xml
  
  # Compression level (9 is highest)
  DeflateCompressionLevel 9
</IfModule>

# Enable Brotli if available (better than gzip)
<IfModule mod_brotli.c>
  AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/xml text/css application/javascript application/json application/xml+rss text/javascript
  
  # Brotli quality (11 is highest)
  BrotliCompressionQuality 11
</IfModule>

# Set Expires headers for better caching
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Add default Expires header
  ExpiresDefault "access plus 1 month"
  
  # Images - longer cache time
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  ExpiresByType image/vnd.microsoft.icon "access plus 1 year"
  
  # Web fonts
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/x-font-ttf "access plus 1 year"
  ExpiresByType application/x-font-otf "access plus 1 year"
  ExpiresByType application/x-font-woff "access plus 1 year"
  ExpiresByType application/x-font-woff2 "access plus 1 year"
  ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
  
  # CSS, JavaScript - longer cache time
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  
  # HTML - shorter cache time to allow for updates
  ExpiresByType text/html "access plus 1 day"
  
  # Data
  ExpiresByType application/json "access plus 0 seconds"
  ExpiresByType application/ld+json "access plus 0 seconds"
  ExpiresByType application/xml "access plus 0 seconds"
  ExpiresByType text/xml "access plus 0 seconds"
</IfModule>

# Add additional cache control headers
<IfModule mod_headers.c>
  # Prioritize CDN resources
  Header set CDN-Origin "cdn.jsdelivr.net"
  
  # Remove ETag (we're using far-future expires)
  <FilesMatch "\.(ico|pdf|flv|jpg|jpeg|png|gif|js|css|swf|webp|woff|woff2|ttf|svg)$">
    Header unset ETag
    FileETag None
    Header set Cache-Control "max-age=31536000, public, immutable"
  </FilesMatch>
  
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "max-age=86400, public, must-revalidate"
    Header set Link "</main.tsx>; rel=preload; as=script, </lovable-uploads/2092ea49-25fc-463b-a435-69f201c7363b.webp>; rel=preload; as=image; fetchpriority=high"
  </FilesMatch>
  
  # Dynamic content should not be cached
  <FilesMatch "\.(php|cgi|pl)$">
    Header set Cache-Control "private, no-cache, no-store, proxy-revalidate, no-transform"
    Header set Pragma "no-cache"
  </FilesMatch>
  
  # Brotli compression (if available)
  <FilesMatch "\.(js|css|html|svg|json|xml|txt)$">
    Header append Vary Accept-Encoding
  </FilesMatch>
  
  # Add efficient loading indicators
  Header set Resource-Prioritization "1=high, 2=auto, 3=low"
  
  # Add frame options header
  Header always set X-Frame-Options "SAMEORIGIN"
  
  # Set Link header for early hints
  <FilesMatch "index\.html$">
    Header add Link "</lovable-uploads/2092ea49-25fc-463b-a435-69f201c7363b.webp>; rel=preload; as=image; fetchpriority=high"
  </FilesMatch>
</IfModule>

# Security headers
<IfModule mod_headers.c>
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-XSS-Protection "1; mode=block"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set Permissions-Policy "camera=(), microphone=(), geolocation=(), interest-cohort=()"
  # Add Content-Security-Policy header
  Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.gpteng.co; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https://cdn.jsdelivr.net; font-src 'self' https://fonts.gstatic.com; connect-src 'self'; frame-src 'self'; object-src 'none'"
</IfModule>

# Force HTTPS
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{HTTPS} off
  RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]
  
  # Normalize to www version
  RewriteCond %{HTTP_HOST} ^heynia\.com$ [NC]
  RewriteRule (.*) https://www.heynia.com/$1 [R=301,L]
  
  # Standardize trailing slashes - Remove trailing slash from non-directory requests
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)/$ /$1 [R=301,L]
  
  # Add trailing slashes to directories 
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^(.*[^/])$ $1/ [R=301,L]
  
  # Handle index files correctly
  # Redirect /index.html to /
  RewriteRule ^index\.html$ / [R=301,L]
  # Redirect /index.php to /
  RewriteRule ^index\.php$ / [R=301,L]
  # Redirect directory/ to directory/index.html internally (not a redirect)
  RewriteCond %{REQUEST_URI} /$
  RewriteCond %{REQUEST_FILENAME}/index.html -f
  RewriteRule ^(.*)$ $1index.html [L]
</IfModule>

# Handle SPA routing
<IfModule mod_rewrite.c>
  RewriteEngine On
  # If the request is not for an existing file or directory
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  # Rewrite all requests to the index.html
  RewriteRule ^ index.html [L]
</IfModule>

# Redirect to CDN for static assets when possible
<IfModule mod_rewrite.c>
  RewriteEngine On
  # Check if the request is for static assets
  RewriteCond %{REQUEST_URI} \.(jpg|jpeg|png|gif|webp|svg|js|css|woff|woff2)$
  # Check if specific CDN file exists (only for production)
  RewriteCond %{HTTP_HOST} ^(www\.)?heynia\.com$ [NC]
  # Redirect to CDN
  RewriteRule ^lovable-uploads/(.*)$ https://cdn.jsdelivr.net/gh/username/nia-dental/public/lovable-uploads/$1 [R=302,L]
</IfModule>

# Add robots.txt if missing
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{REQUEST_URI} ^/robots\.txt$ [NC]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteRule ^(.*)$ /index.html [L]
</IfModule>

# Prevent 404 errors for non-existing favicon.ico
<FilesMatch "favicon\.ico">
  ErrorDocument 404 "The requested file favicon.ico was not found."
</FilesMatch>

# Add content-type for WebP images
<IfModule mod_mime.c>
  AddType image/webp .webp
</IfModule>

# Enable HTTP/2 if available
<IfModule mod_http2.c>
  Protocols h2 h2c http/1.1
</IfModule>
